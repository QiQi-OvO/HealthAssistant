<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.healthassistant.AdminActivity"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您当前处于用户模式"
        android:textSize="20dp"></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="用户名:"
            android:textSize="20dp"></TextView>
        <TextView
            android:id="@+id/user_account"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="20dp"
            ></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="地理位置:"
            android:textSize="20dp"></TextView>
        <EditText
            android:id="@+id/user_location_edit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="20dp"
            ></EditText>
        <Button
            android:id="@+id/user_locationbtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="获取地理位置"></Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="今日体温:"
            android:textSize="20dp"></TextView>
        <EditText
            android:id="@+id/user_temperature"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="20dp"
            ></EditText>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="℃"
            android:textSize="20dp"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="备注说明:"
            android:textSize="20dp"></TextView>
        <EditText
            android:id="@+id/user_tips"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="20dp"
            ></EditText>
    </LinearLayout>
    <RadioGroup
        android:id="@+id/user_radiogroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="体温正常"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="体温异常"/>
    </RadioGroup>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <Button
            android:id="@+id/user_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="提交"></Button>
        <Button
            android:id="@+id/user_message_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="查看今日通知"></Button>
        <Button
            android:id="@+id/user_phone_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="添加管理人员到通讯录"></Button>
    </LinearLayout>



</LinearLayout>
