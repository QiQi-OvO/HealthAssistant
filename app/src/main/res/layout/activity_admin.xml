<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.healthassistant.AdminActivity"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您当前处于管理员模式"
        android:textSize="30dp"></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="用户名:"
            android:textSize="30dp"></TextView>
        <TextView
            android:id="@+id/admin_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            ></TextView>
    </LinearLayout>
    <Button
        android:id="@+id/admin_btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看未完成报送的情况"></Button>
    <Button
        android:id="@+id/admin_btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看体温异常人员情况"></Button>
    <Button
        android:id="@+id/admin_btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看所有用户的情况"></Button>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/admin_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="今日通知"></EditText>
        <Button
            android:id="@+id/admin_submit_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布今日通知"></Button>
    </LinearLayout>
    <Button
        android:id="@+id/admin_finsh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="模拟系统日期变化"></Button>


</LinearLayout>
